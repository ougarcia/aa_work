<h1>New Goal</h1>

<form action="<%= goals_url %>" method="post">
  <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">

  <label>Objective</label>
  <input type="text" id="objective" name="goal[objective]" value="<%= @goal.objective %>">

  <label>Public
    <input type="radio" name="goal[publicized]" checked value="<%= true %>">
  </label>
  <label>Private
    <input type="radio" name="goal[publicized]" value="<%= false %>">
  </label>

  <input type="submit" name="Add Goal" value="Add Goal">

</form>
